%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .row
    .col-sm-6
      .card
        .card-body
          .form-group.row
            .col-sm-8
              = f.email_field :email, placeholder: "Enter email", class: 'form-control'
          .form-group.row
            .col-sm-8
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, placeholder: "Password", class: 'form-control'
          .form-group.row
            .col-sm-8
              = f.password_field :password_confirmation, placeholder: "Password confirmation", class: 'form-control'
          .actions
            = f.submit "Sign up", class:"btn btn-outline-secondary"
            = render "devise/shared/links"
