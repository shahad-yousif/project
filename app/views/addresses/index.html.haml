%p#notice= notice
%h1 Addresses
%table.table.table-striped.table-bordered.table-hover.table-responsive
  %thead.thead-dark
    %tr
      %th Country
      %th City
      %th Person
      %th{colspan: "3"}
  %tbody
    - @addresses.each do |address|
      %tr
        %td= address.country
        %td= address.city
        %td= address.person_id
        %td= link_to 'Show', address
        %td= link_to 'Edit', edit_address_path(address)
        %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Address', new_address_path, class:"btn btn-outline-secondary"