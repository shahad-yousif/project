= form_with(model: profile, local: true) do |form|
  - if profile.errors.any?
    #error_explanation
      %h2
        = pluralize(profile.errors.count, "error")
        prohibited this profile from being saved:
      %ul
        - profile.errors.full_messages.each do |message|
          %li= message
  .row
  .col-sm-6
    .card
      .card-body
        
        .field
          = form.label :first_name
          = form.text_field :first_name, id: :profile_first_name
        .field
          = form.label :last_name
          = form.text_field :last_name, id: :profile_last_name
        .field
          = form.label :gender
          = form.text_field :gender, id: :profile_gender
        .field
          = form.label :email
          = form.text_field :email, id: :profile_email
        .field
          = form.label :person_id
          = form.collection_select :person_id, Person.order(:name),:id,:name
        .field
          = form.label :status
          %br
          .form-check.form-check-inline
            %input#inlineCheckbox1.form-check-input{type: "checkbox", value: "option1"}/
            %label.form-check-label{for: "inlineCheckbox1"} Active
          .form-check.form-check-inline
            %input#inlineCheckbox2.form-check-input{type: "checkbox", value: "option2"}/
            %label.form-check-label{for: "inlineCheckbox2"} Inactive
        .actions
          = form.submit